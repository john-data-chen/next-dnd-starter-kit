{
  "name": "next-dnd-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/next-dnd-starter-kit"
  },
  "scripts": {
    "build": "next build",
    "commit": "git-cz",
    "dev": "next dev",
    "format": "oxfmt --no-error-on-unmatched-pattern --config ./.oxfmtrc.json",
    "init-db": "tsx database/init-db-data.ts",
    "init-db:force": "tsx database/init-db-data.ts --force",
    "lint": "oxlint src --type-aware --fix",
    "playwright": "npx playwright test",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "start": "next start",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.574.0",
    "mongoose": "^9.2.1",
    "next": "16.1.6",
    "next-intl": "^4.8.3",
    "next-themes": "^0.4.6",
    "nextjs-toploader": "^3.9.17",
    "postcss": "^8.5.6",
    "radix-ui": "latest",
    "react": "19.2.4",
    "react-day-picker": "^9.13.2",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/cz-commitlint": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.13",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "commitizen": "^4.3.1",
    "dotenv": "^17.3.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "oxlint-tsgolint": "^0.14.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,css,scss}": [
      "oxfmt --no-error-on-unmatched-pattern --config ./.oxfmtrc.json"
    ],
    "./src/**/*.{js,jsx,ts,tsx}": [
      "oxlint --type-aware --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "node": ">=24.13.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}