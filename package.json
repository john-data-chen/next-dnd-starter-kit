{
  "name": "next-dnd-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/next-dnd-starter-kit"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --fix",
    "format": "prettier --write .",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "playwright": "npx playwright test",
    "commit": "git-cz",
    "init-db": "tsx database/init-db-data.ts",
    "init-db:force": "tsx database/init-db-data.ts --force"
  },
  "engines": {
    "node": "==22.x"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,tsx,ts,css,less,scss,sass}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
