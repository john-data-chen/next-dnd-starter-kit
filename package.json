    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.12",
    "@radix-ui/react-avatar": "^1.1.8",
    "@radix-ui/react-checkbox": "^1.3.0",
    "@radix-ui/react-collapsible": "^1.1.9",
    "@radix-ui/react-dialog": "^1.1.12",
