{
  "name": "next-dnd-starter-kit",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "john.chen",
    "url": "https://github.com/john-data-chen/next-dnd-starter-kit"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "oxlint src --type-aware --fix",
    "format": "prettier --write . --no-error-on-unmatched-pattern --config ./.prettierrc",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "playwright": "npx playwright test",
    "commit": "git-cz",
    "init-db": "tsx database/init-db-data.ts",
    "init-db:force": "tsx database/init-db-data.ts --force"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "packageManager": "pnpm@10.17.1",
  "lint-staged": {
    "./src/**/*.{js,jsx,tsx,ts}": [
      "prettier --write --no-error-on-unmatched-pattern --config ./.prettierrc"
    ],
    "./src/**/*.{js,jsx,ts,tsx}": [
      "oxlint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-toast": "^1.2.15",
    "@tailwindcss/postcss": "^4.1.13",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.544.0",
    "mongoose": "^8.18.2",
    "next": "^15.5.4",
    "next-auth": "5.0.0-beta.29",
    "next-intl": "^4.3.9",
    "next-themes": "^0.4.6",
    "nextjs-toploader": "^3.9.17",
    "postcss": "^8.5.6",
    "radix-ui": "latest",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.18.6",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "dotenv": "^17.2.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.18.0",
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@types/react": "19.1.4",
      "@types/react-dom": "19.1.5"
    }
  }
}
